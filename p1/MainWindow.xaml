<Window x:Class="p1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Click="btn1_Click" Name="btn1" Margin="5" Height="50" Width="100" Content="Задание 1"/>
            <Button Click="btn2_Click" Name="btn2" Margin="5" Height="50" Width="100" Content="Задание 2"/>
            <Button Click="btn3_Click" Name="btn3" Margin="5" Height="50" Width="100" Content="Задание 3"/>
        </StackPanel>
        <Frame x:Name="MyFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
